{
  "name": "vscode-ktlint-formatter",
  "displayName": "Kotlin Ktlint Formatter",
  "description": "Kotlin formatter using ktlint with zero configuration",
  "version": "0.1.0",
  "publisher": "rnoro",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "kotlin",
    "ktlint",
    "formatter",
    "formatting"
  ],
  "activationEvents": [
    "onLanguage:kotlin",
    "onLanguage:kotlin-script"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "extensions": [
          ".kt"
        ]
      },
      {
        "id": "kotlin-script",
        "extensions": [
          ".kts"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "ts-loader": "^9.x",
    "typescript": "^5.3.x",
    "webpack": "^5.x",
    "webpack-cli": "^5.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnoro/vscode-ktlint-formatter.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/rnoro/vscode-ktlint-formatter#readme",
  "bugs": {
    "url": "https://github.com/rnoro/vscode-ktlint-formatter/issues"
  }
}
